// ---------------------------------------------------
// My_Form_Validator()- Client side form validator 
// ---------------------------------------------------

function submitme() {

	var vform;

	vform = document.Form1;

	if (My_Form_Validator() == false)
		return false;

	vform.action = vform.elements['server'].value

	vform.submit();

	return true;
}

function validatefreeformfundnameentry(amountsource,fundsource,hiddenfield) {

	var vform;

	vform = document.Form1;

	if ((vform.elements[amountsource].value != 0) && ((vform.elements[fundsource].value.length < 2) || (vform.elements[fundsource].value == "Indicate where to direct donation here"))){
		alert("Please enter a fund to receive your donation.");
		vform.elements[fundsource].focus();
		return false;
	}
	else {
		vform.elements[hiddenfield].value = "00000000/" + vform.elements[fundsource].value;

		//alert( vform.elements[fundsource].value.toString());
		//alert(vform.elements[hiddenfield].value.toString());

	}

}

function validatedropdownfunds(amountsource,fundsource) {

	var vform;
	var noselection = "OTHER1";
	var alertmessage = "Please select a fund to receive your donation."

	vform = document.Form1

	if ((vform.elements[amountsource].value != 0) && (vform.elements[fundsource][vform.elements[fundsource].selectedIndex].value == noselection)) {
		alert(alertmessage);
		vform.elements[fundsource].focus();
		return false;
	}
}

function My_Form_Validator(){

	var vform;

	vform = document.Form1;

	if (vform.elements["totalamount"].value == 0){
		alert("Please enter a donation to at least one fund before submitting.");
		return false;
	}
	
/* COMMENTED OUT - not drop down fields
	if (validatedropdownfunds("GIFT_AMOUNT11","FUND11") == false)
		return false;

	if (validatedropdownfunds("GIFT_AMOUNT12","FUND12") == false)
		return false;

	if (validatedropdownfunds("GIFT_AMOUNT1","FUND1") == false)
		return false;

	if (validatedropdownfunds("GIFT_AMOUNT10","FUND10") == false)
		return false;

	if (validatedropdownfunds("GIFT_AMOUNT2","FUND2") == false)
		return false;
*/

	if (validatedropdownfunds("GIFT_AMOUNT3","FUND3") == false)
		return false; 

	if (validatedropdownfunds("GIFT_AMOUNT4","FUND4") == false)
		return false; 

	if (validatedropdownfunds("GIFT_AMOUNT5","FUND5") == false)
		return false; 

	
	
/* COMMENTED OUT ON 6/9/15 PER MICHAEL WESBECHER RT TICKET #80217
	if (validatedropdownfunds("GIFT_AMOUNT6","FUND6") == false)
		return false; 
*/

	if (validatefreeformfundnameentry("GIFT_AMOUNT7","fundEntry7","FUND7") == false)
		return false;
	
/*		if (validatefreeformfundnameentry("GIFT_AMOUNT9","FUND9") == false)
		return false;	
*/

/*
	if (validatefreeformfundnameentry("GIFT_AMOUNT8","fundEntry8","FUND8") == false)
		return false;
*/
} // End of My_Form_Validator 





// -----------------------------------------------------------------
// CalcDisplayAmount - convert numeric entry to formatted text value
// -----------------------------------------------------------------

function CalcDisplayAmount(amt)
{
	var displayAmt;
	var amtValue;

	if (isNaN(amt)== true){   //not a valid number
		displayAmt = "0.00";
		return displayAmt;		
	}

      if (amt.length==0) {		// no value at all
		displayAmt = "0.00";
		return displayAmt;	
	}

// round to 2 places after the decimal point
	amtValue = parseFloat(amt);
	amtValue = Math.round(amtValue * 100) / 100;

	//	if user enters in value < 0, make it 0
	if (amtValue < 0) 
		amtValue = 0;

	//	if it doesn't contain decimal point, add it 
		if (amtValue == Math.round(amtValue)) {
			displayAmt = amtValue + ".00";
		}

		// else if it only contains one place after the decimal, add one more
		else if (amtValue * 10 == Math.round(amtValue * 10)) {
			displayAmt = amtValue + "0";
		}
	// else it contains 2 places after the decimal, just return it
	else {
		displayAmt = amtValue;
	}
	return displayAmt;
}



// -----------------------------------------------------------------

// amountchange() - called when any amount changes

// -----------------------------------------------------------------

function calculateamount(GiftAmountField) {
	var vform;
	vform = document.Form1;

	vform.elements[GiftAmountField].value=CalcDisplayAmount(vform.elements[GiftAmountField].value);
	return parseFloat(vform.elements[GiftAmountField].value);
}



function amountchange() {

	var total;
	var vform;

	vform = document.Form1;

	total = 0;
//	total += calculateamount("GIFT_AMOUNT1"); COMMENTED OUT ON 6/9/15 PER MICHAEL WESBECHER RT TICKET #80217
	total += calculateamount("GIFT_AMOUNT10");
	total += calculateamount("GIFT_AMOUNT2");
	total += calculateamount("GIFT_AMOUNT3");
	total += calculateamount("GIFT_AMOUNT4");
	total += calculateamount("GIFT_AMOUNT5");
//	total += calculateamount("GIFT_AMOUNT6"); COMMENTED OUT ON 6/9/15 PER MICHAEL WESBECHER RT TICKET #80217
	total += calculateamount("GIFT_AMOUNT7");
//	total += calculateamount("GIFT_AMOUNT8");
//	total += calculateamount("GIFT_AMOUNT9");
	total += calculateamount("GIFT_AMOUNT11");
	total += calculateamount("GIFT_AMOUNT12");
    total += calculateamount("GIFT_AMOUNT13");
	total += calculateamount("GIFT_AMOUNT14");
	total += calculateamount("GIFT_AMOUNT15");
	total = Math.round(total * 100) / 100;

	vform.elements["totalamount"].value=CalcDisplayAmount(total);

	return true;

}

