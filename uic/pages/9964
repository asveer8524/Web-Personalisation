<script type="text/javascript" language="JavaScript">
function IsNumeric2()
{
	

   var mynumber = document.getElementById('NO_TICKETS').value;
   var ValidChars = "0123456789";
   var IsNumber=true;
   var Char;



   for (i = 0; i < mynumber.length && IsNumber == true; i++) 
      { 
      Char = mynumber.charAt(i); 
      if (ValidChars.indexOf(Char) == -1) 

         {
	alert("Please enter a valid number.");
return false;
        
         }
      }    

	doCalc(mynumber)
   
   
   }

function doCalc(mynumber)
{

var vform;

var GA_Cost;
var Non_GA_Cost;
vform = document.Form1;
GA_Cost = 5
Non_GA_Cost = 10



document.getElementById('GIFT_VALUE').innerHTML = "$" + (mynumber * GA_Cost) + ".00"
document.getElementById('NONGIFT_VALUE').innerHTML =  "$" + (mynumber * Non_GA_Cost) + ".00"
document.getElementById('GIFT_AMOUNT1').value = (mynumber * GA_Cost) + ".00"
document.getElementById('NONGIFT_AMOUNT1').value = (mynumber * Non_GA_Cost) + ".00"

}
